<% include partials/_header %>

<div class="container">

    <div class="row mt-6">
        <div class="col-md-7">




<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>id del cliente</th>
            <th>Nombre</th>
            <th>Nacionalidad</th>
            <th>Genero</th>
           
            <th>Opciones</th>


        </tr>


    </thead>


    <tbody>

        <% if (data) { %>
        <% for (var i =0 ; i< data.length; i++) { %>
                <tr>
                    <td>
                        <%= data[i].idpersona %>
                    </td>
                    <td> <%= data[i].nombre %></td>
                    <td> <%= data[i].nacionalidad %></td>
                    <td> <%= data[i].genero %></td>
                
                    <td>
                        <a href="/clientesdelete/<%= data[i].idpersona %>" class="btn btn-danger">Delete</a>
                        <a href="/clientesupdate/<%= data[i].idpersona %>" class="btn btn-info">Update</a>
                    </td>
                </tr>


            <% } %>   
        <% } %>

    </tbody>
</table>
</div>
<div class="col-md-5">
    <div class="card">
        <div class="card-body">
               <form action="/clientesadd" method="post">
                   
                   <div class="form-group">
                           <input type="text" name="nombre" placeholder="Nombre del cliente" class="form-control" required>
           
                       </div>
                       <div class="form-group">
                               <input type="text" name="nacionalidad" placeholder="nacionalidad del cliente" class="form-control" required>
               
                           </div>
                           <div class="form-group">
                            <input type="text" name="genero" placeholder="genero del cliente" class="form-control" required>
            
                        </div>
                      
       
                           <button type="submit" class="btn btn-primary">Agregar Cliente </button>
               </form>

        </div>

    </div>





</div>

</div>
</div>




<% include partials/_footer %>